@page "/"
@inject ISignInService SignInService
@inject NavigationManager NavigationManager
@inject IAccountService AccountService
@inject IJSRuntime JS


@if (currentUser == null)
{
    <div class="text-center mt-5">
        <h4>Please sign in to view your accounts.</h4>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="fw-bold">Welcome, @currentUser.Username 👋</h2>
                <p class="text-muted">Access & manage your accounts and transactions efficiently.</p>
            </div>
          
        </div>
        <!-- Summary Dashboard Card -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card shadow-sm border-0 rounded-4 p-3 d-flex flex-row align-items-center">
                    <div style="width: 120px; height: 120px;">
                        <canvas id="balanceChart"></canvas>
                    </div>
                    <div class="ms-4">
                        <h6 class="fw-bold mb-1">@((currentUser?.Accounts?.Count ?? 0)) Bank Accounts</h6>
                        <p class="text-muted mb-1">Total Current Balance</p>
                        <h4 class="fw-bold text-dark">$@totalBalance.ToString("F2")</h4>
                    </div>
                </div>
            </div>
        </div>

     


        <!-- Recent Transactions Section -->
        <div class="row">
            <h4>Recent Transactions</h4>

            @if (recentTransactions == null)
            {
                <p>Loading transactions...</p>
            }
            else if (recentTransactions.Count == 0)
            {
                <p class="text-muted">No recent transactions available.</p>
            }
            else
            {
                <table class="table table-striped table-hover shadow-sm mt-2">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Category</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var txn in recentTransactions)
                        {
                            <tr>
                                <td>@txn.Timestamp.ToShortDateString()</td>
                                <td>@txn.Description</td>
                                <td class="@(txn.Amount < 0 ? "text-danger" : "text-success")">
                                    $@txn.Amount
                                </td>
                                <td>
                                    <span class="badge bg-@(txn.Status == "Success" ? "success" : "secondary")">
                                        @txn.Status
                                    </span>
                                </td>
                                <td>@txn.Category</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
}

@code {
    private User? currentUser;
    private decimal totalBalance;
    private List<Transaction> recentTransactions = new();
    private Func<Task>? _onChangeHandler;
   
    protected override async Task OnInitializedAsync()
    {
        currentUser = await SignInService.GetCurrentUserAsync();
        if (!SignInService.IsSignedIn)
        {
            
            NavigationManager.NavigateTo("/signin");
            return;
        }
        Console.WriteLine($"Loaded {currentUser!.Accounts?.Count ?? 0} accounts");

      

            totalBalance = currentUser.Accounts?.Sum(a => a.Balance) ?? 0;
        await Task.Delay(200);

        recentTransactions = await AccountService.GetRecentTransactionsAsync(currentUser!.Id);
        Console.WriteLine($"[Home] Loaded {recentTransactions.Count} transactions");

        
        _onChangeHandler = async () =>
        {
            currentUser = await SignInService.GetCurrentUserAsync();
            totalBalance = currentUser?.Accounts?.Sum(a => a.Balance) ?? 0;
            recentTransactions = await AccountService.GetRecentTransactionsAsync(currentUser!.Id);
            await InvokeAsync(StateHasChanged);
         
        };

        Console.WriteLine("[DEBUG] Loading transactions for user: " + currentUser.Id);

    }
   

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && currentUser?.Accounts != null)
        {
            var accountsData = currentUser.Accounts.Select(a => new
            {
                name = a.Name,
                balance = a.Balance
            });

            await JS.InvokeVoidAsync("renderBalanceChart", accountsData);
        }
    }

}